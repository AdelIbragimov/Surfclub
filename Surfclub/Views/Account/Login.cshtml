@{
    ViewData["Title"] = "View";
}
@model LoginViewModel
<h1>Авторизация</h1>
<form method="post" ast-controller="User" asp-action="Login" />
<div asp-validation-summary="ModelOnly"></div>
<div class="form-group">
    <label asp-for="Nickname">

    </label>
    <input type="text" asp-for="Nickname" />
</div>
