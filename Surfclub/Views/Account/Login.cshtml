@{
    ViewData["Title"] = "View";
}
@model LoginViewModel

<form asp-action="Login" asp-controller="User"
      class="col-3 "
      asp-anti-forgery="true">
    <div class="card">
        <div class="card-header">Авторизация пользователя</div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Nickname">Введите Псевдоним</label>
                <input class="form-control" type="text" asp-for="Nickname" />
                <span asp-validation-for="Nickname" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input type="password" class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">Запомнить меня
                </label>
                <span asp-validation-for="RememberMe" />
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>

<span>Нет аккаунта?</span>
<a asp-action="Register" asp-controller="User">Регистрация</a>





